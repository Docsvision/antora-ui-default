<article class="doc doc__search-page 1">
  <div class="search-container search-panel__searchbox-container">
    <div id="searchbox" class="search-container__searchbox"></div>
    {{> search-mode-switch}}
  </div>
  <div class="search-panel">
    <div class="search-panel__main-container">
      <div class="search-panel__filters"></div>
      <div class="search-panel__results">
        <div id="hits"></div>
        <div id="pagination"></div>
        <div id="trending"></div>
      </div>
      <div id="search-results-container"></div>
      <div id="hierarchical-menu"></div>
    </div>
  </div>
