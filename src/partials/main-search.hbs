    "Web-клиент",
    "Базовые объекты",
    "Платформа",
    "Описание схем стандартных карточек",
    "Модуль интеграции с реестром МЧД",
    "Сервис уведомлений",
    "Руководство разработчика",
    "Windows-клиент",
    "Управление документами",
    "Модуль интеграции с операторами ЭДО",
    "Конструктор согласований",
    "Настройка системы",
    "Управление процессами",
    "Обновление системы",
    "Делопроизводство",
    "Комплект утилит Resource Kit",
    "Менеджер решений",
    "Консоль управления Docsvision",
    "Установка системы на Windows",
    "Управление архивом",
    "Установка системы на Linux",
    "Модуль межфилиального обмена",
    "Модуль интеграции с УЦ Контур",
    "Служба фоновых операций",
    "Сервис конвертации файлов",
    "Модуль репликации справочников",
    "Описание системы",
    "Конструктор шаблонов",
    "Конструкторы и справочники"
  ] --}}

  {{!-- products.forEach(product => {
    productVersions[product] = {
      versions: [],
      component: null,
      componentItem: null
    }
  }) --}}

  var components = {{{toJson site.components}}};

  let products = [];
  for (let key in components) {
    const productVersionsKey = components[key].latest?.title || components[key].versions[0]?.title;
    if (productVersionsKey) {
      productVersions[productVersionsKey] = {
        versions: [],
        component: null,
        componentItem: components[key]
      };
      products.push(components[key].latest?.title || components[key].versions[0]?.title);
    }
  }

  search.on('render', function(data) {
    createProductItems()
  });

  const searchInputElement = document.querySelector('.ais-SearchBox-input');

  searchMode.subscribe((isAiSearchMode) => {
    if (isAiSearchMode) {
      searchInputElement.addEventListener('keydown', aiSearchOnKeyDown);
      return;
    }

    searchInputElement.removeEventListener('keydown', aiSearchOnKeyDown);
  })

  document.addEventListener('ai-search initialised', () => {
    if (aiSearch.isAvailable) {
      searchMode.switchElement.disabled = false;
      if (window.location.search.includes('aiquery')) {
        searchMode.toggleMode(true);
        aiSearch.search(searchInputElement.value)
          .then(renderElementsFromAiSearch)
          .catch((error) => {
            disableAiMode();
            console.error(error);
          });
      }
    }
  })

  document.addEventListener('ai-search limit is reached', () => {
    disableAiMode();
  })

  async function aiSearchOnKeyDown(event) {
    if (event.key === 'Enter') {
      event.preventDefault();

      try {
        const data = await aiSearch.search(event.target.value);
        renderElementsFromAiSearch(data);
      } catch(error) {
        disableAiMode();
        console.error(error);
      }
    }
  }

  function disableAiMode() {
    searchMode.toggleMode(false);
    searchMode.switchElement.disabled = true;
  }

  function renderElementsFromAiSearch(data) {
    const resultsContainer = document.getElementById('hits');
    const productList = document.getElementById('product-list');

    if (resultsContainer.hasChildNodes) {
      resultsContainer.innerHTML = '';
    }

    if (productList.hasChildNodes) {
      productList.innerHTML = '';
    }

    const container = document.createElement('div');
    container.classList.add('hits-container');
    const message = document.createElement('div');
    message.classList.add('hits-message');
    message.innerHTML = marked.parse(data.message?.content);
    container.appendChild(message);
    
    const list = document.createElement('ul');
    list.classList.add('hits-list');
    const listItems = data.sources?.map(source => {
      const listItem = document.createElement('li');
      listItem.classList.add('hits-list-item');
      const anchor = document.createElement('a');
      anchor.classList.add('hits-list-link');
      anchor.href = source.url;
      anchor.textContent = source.title;
      listItem.appendChild(anchor);
      return listItem;
    });
    list.append(...listItems);

    container.appendChild(list);
    resultsContainer.appendChild(container);
  }
</script>
