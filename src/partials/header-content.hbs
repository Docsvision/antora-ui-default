        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
      {{#if (eq env.ANTORA_PROD_BUILD 'true')}}
        {{#if (eq site.url '/dv5')}}
        <a class="navbar-item" href="/dv6/">Linux Edition</a>
		{{else}}
		<a class="navbar-item" href="/dv5/">DV5</a>
		{{/if}}
      {{else}}
        <div class="navbar-item has-dropdown is-hoverable">
          
		    {{#if (eq site.url '/dv5')}}
		    Docsvision 5
			{{else}}
			{{#if (eq site.url '/dv6')}}
			Docsvision Linux Edition
			{{else}}
		    <a class="navbar-link" href="/">Все версии</a>
		    {{/if}}
			{{/if}}
		  
          <div class="navbar-dropdown">
            
            <a class="navbar-item" href="/dv5/">DV5</a>
            <a class="navbar-item" href="/dv6/">Linux Edition</a>
          </div>
        </div>
        {{/if}}
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">Ещё...</div>
          <div class="navbar-dropdown is-right">
            {{#if (eq site.url '/dv5')}}
		    <a class="navbar-item" href="/dv5/timeline/">Изменения в продукте</a>
		    {{else}}
		    {{#if (eq site.url '/dv6')}}
		    <a class="navbar-item" href="/dv6/timeline/">Изменения в продукте</a>
		    {{else}}
		    <a class="navbar-item" href="/timeline/">Изменения в продукте</a>
		    {{/if}}
